{
  "name": "shopify-blank-theme",
  "scripts": {
    "build": "tailwindcss -i ./src/css/main.css -o ./snippets/css-main.min.css.liquid --minify",
    "watch": "tailwindcss -i ./src/css/main.css -o ./snippets/css-main.min.css.liquid --minify --watch",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier-check": "prettier --check ."
  },
  "dependencies": {
    "@shopify/prettier-plugin-liquid": "^1.5.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3"
  }
}
